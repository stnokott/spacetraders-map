package templates

type HomeData struct {
	Title   string
	Version string
	Commit  string
}

templ Home(data HomeData) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ data.Title }</title>
		</head>
		<body>
			<div id="map">
				@mapComp()
			</div>
			<div id="build-info">
				<small>{ data.Version } build { data.Commit }</small>
			</div>
		</body>
	</html>
}
